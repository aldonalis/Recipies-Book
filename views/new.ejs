<% include partials/header %>

<div class="container form">
    <form action="/recipies" method="POST">
            <h2>Add a new recipie!</h2>
            <div class="form-group">
                <label for="title">Title</label>
                <input class="form-control" id="title" type="text" name="recipie[title]" placeholder="Recipie title">
            </div>
            <div class="form-group">
                <label>Image url</label>
                <input class="form-control" id="image" type="text" name="recipie[image]" placeholder="Image url">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
            <a href="/recipies"> Go Back</a>
    </form>
</div>

