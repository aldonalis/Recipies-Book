<% include partials/header %>

<div class="container">
    <div class="row">
        <h2 style="text-align: center">Edit recipie!</h2>
        <div style="width: 30%; margin: 30px auto">
            <form action="/recipies/<%= recipie._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="recipie[title]" value="<%= recipie.title %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="recipie[image]" value="<%= recipie.image %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="3" name="recipie[description]"><%= recipie.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/recipies"> Go Back</a>
        </div>
    </div>
</div>








<% include partials/footer %>