<% include partials/header %>

<div class="container">
    <div class="jumbotron">
        <div class="container main">
            <h1>Welcome to Online recipes Book!</h1>
            <p>The only place where you can online store your favourite recipes</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/recipes/new">Create new recipe</a>
            </p>
        </div>
    </div>
    
    <div class="row text-center" >
        <% recipes.forEach(function(recipe) { %>
            <div class="col-md-3  col-sm-6 preview">
                <div class="thumbnail">
                    <img src="<%= recipe.image %>">
                    <div class="caption">
                        <h2><%= recipe.title %></h2>
                    </div>
                    <p>
                        <a href="/recipes/<%= recipe._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>


<% include partials/footer %>