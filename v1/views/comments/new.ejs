<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2 form">
            <form action="/recipes/<%= recipe._id %>/comments" method="POST">
                    <h2>Add a new comment to <%= recipe.title %>!</h2>
                    <div class="form-group">
                        <label for="comment">Text</label>
                        <input class="form-control" id="text" type="text" name="comment[text]" placeholder="Text">
                    </div>
                    <div class="form-group">
                        <label>Author</label>
                        <input class="form-control" id="author" type="text" name="comment[author]" placeholder="Author">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block">Submit</button>
                    </div>
                    <a href="/recipes"> Go Back</a>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>

