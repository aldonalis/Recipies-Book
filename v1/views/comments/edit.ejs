<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <form action="/recipes/<%= recipe._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <h2>Edit comment!</h2>
                    <div class="form-group">
                        <label for="comment">Text</label>
                        <input class="form-control" id="text" type="text" name="comment[text]" value="<%= comment.text %>">
                    </div>
                    <div class="form-group">
                        <label>Author</label>
                        <input class="form-control" id="author" type="text" name="comment[author]" value="<%= comment.author %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                    <a href="/recipes"> Go Back</a>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>

